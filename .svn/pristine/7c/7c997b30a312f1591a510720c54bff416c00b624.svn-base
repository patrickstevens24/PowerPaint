package actions;


import java.awt.Point;

import view.Shapes;
/**
 * Interface for the tools.
 * 
 * @author Patrick Stevens
 * @version 1.0
 *
 */
public interface Tool {
    /**
     * Getting the name of tool.
     * @return theName
     */
    String getName();
     /**
      * Getting the end point.
      * @return theEndPoint
      */
    Point getEndPoint();
    /**
     * Getting the start point.
     * @return theStartPoint
     */
    Point getStartPoint();
    /**
     * Getting the shape.
     * @return theShape
     */
    Shapes getShape();
    /**
     * Setting the start point.
     * @param thePoint 
     */
    void setStartPoint(final Point thePoint);
}
